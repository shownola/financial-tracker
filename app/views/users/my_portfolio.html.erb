<div class="container">
  <h1 class="display-3 text-center port-heading">My Portfolio</h1>
  <h3 class="search-area">Search Stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-10 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: 'Stock ticker symbol', autofocus: true, class: 'form-control form-control-lg' %>
      </div>
      <div class="col-sm-2 no-left-padding">
        <%= button_tag type: :submit, class: 'btn btn-success btn-lg' do %>
          <%= fa_icon 'search 1.25x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="results">

</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>
<%= render 'users/results' %>
